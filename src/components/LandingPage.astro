filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#1c1a27",endColorstr="#dddcd7",GradientType=1);
background-attachment: fixed;
  }

  header {
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin-bottom: 50px;
	padding: 16px;
	max-width: 1920px;
	margin: 0 auto 75px auto;
  }

  .logo-container {
	display: flex;
	align-items: center;
  }

  .logo-container h1 {
	color: #fff;
	font-size: 1.25rem;
  }

  .logo-container img {
	margin-right: 16px;
	max-width: 55px;
  }

  .contact-cta {
	background-color: #fff;
	padding: 7px 25px;
	text-decoration: unset;
	border-radius: 100px;
	color: #000;
  }

  .contact-cta h3 {
	margin: unset;
	color: #000;
	font-size: .9rem;
  }

  main {
	padding: 0 16px;
  }

  main section {
	display: flex;
	align-items: flex-start;
	max-width: 1300px;
	width: 100%;
	margin: 0 auto;
	gap: 2rem;
  }

  .iframe-container {
	display: flex;
	flex-direction: column;
gap: 2rem;
  }

  .iframe-container, .Information-container {
	width: 50%;
  }

.responsive-iframe {
	display: flex;
  width: 100%;
  aspect-ratio: 16 / 9; /* Adjust for your aspect ratio */
}

.responsive-iframe iframe {
  width: 100%;
  height: 100%;
  max-width: 634px;
}

.Information-container {
	display: flex;
	flex-direction: column;
}

.Information-container__card {
	background-color: rgba(0,0,0, 0.75);
	border-radius: 10px;;
	padding: 20px;
	margin-bottom: 1.5rem;
	max-width: 595px;
	width: calc(100% - 40px);
}

.Information-container__card:last-child{
	margin-bottom: 3rem;
}

.Information-container__card h2 {
	margin-top: unset;
}

.Information-container__card p, .Information-container__card ul {
	margin-bottom: unset;
}

.Information-container__card h2, .Information-container__card p, .Information-container__card h4, .Information-container__card li {
color: #fff;
}

  footer {
	position: relative;
	bottom: 0;
	background-color: #000;
	margin-top: 2rem;
	width: 100%;
	left: 0;
  }

  footer p {
	color: #fff;
	margin: unset;
	font-size: .9rem;
	padding: 10px 16px;
  }

  @media (max-width: 1350px) {
    header {
		margin-bottom: 25px;
	}

	main section {
	flex-direction: column;
  }
  .logo-container h1 {
	font-size: .9rem;
  }
  .iframe-container, .Information-container {
	width: 100%;
  }
  .Information-container, .responsive-iframe {
	align-items: center;
	justify-content: center;
  }
  }

  @media (max-width: 319px) {
  .logo-container h1 {
	display: none;
  }
  }

</style>
