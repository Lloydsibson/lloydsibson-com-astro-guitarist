p, li {
font-family: 'Poppins-Regular', sans-serif;
line-height: 26px;
}

h1, h2, h3, h4, h5, h6 {
font-family: 'Poppins-Semibold', sans-serif;
line-height: 26px;
}

  body {
  font-size: 16px;
  background: rgb(28,26,39);
  background-repeat: no-repeat;
  background-size: cover;
/* background: -moz-linear-gradient(180deg, rgba(28,26,39,1) 50%, rgba(61,22,53,1) 63%, rgba(128,19,87,1) 69%, rgba(184,35,90,1) 75%, rgba(231,98,125,1) 81%, rgba(226,201,204,1) 88%, rgba(221,220,215,1) 100%);
